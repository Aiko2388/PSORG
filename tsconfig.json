{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "pretty": true,
    "strict": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": false,
    "baseUrl": "./"
  },
  "files": ["src/index.ts"],
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
